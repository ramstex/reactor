{
	"name": "reactor",
	"version": "0.1.0",
	"description": "React MVC build for special projects",
	"license": "UNLICENSED",
	"type": "module",
	"repository": "git@github.com:ramstex/reactor.git",
	"scripts": {
		"dev": "cross-env webpack serve --open --mode=development",
		"build": "build.sh",
		"lint": "eslint ./config/**/*.jsx  ./src ./src/**/*.jsx",
		"lint:fix": "eslint ./config/**/*.jsx  ./src ./src/**/*.jsx --fix",
		"stylelint": "stylelint ./src/**/*.scss",
		"stylelint:fix": "stylelint ./src/**/*.scss --fix"
	},
	"lint-staged": {
		"*.{ts,js,jsx}": [
			"prettier . --write",
			"eslint"
		],
		"*.{scss,css}": [
			"prettier . --write",
			"stylelint"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@types/jest": "^29.4.2",
